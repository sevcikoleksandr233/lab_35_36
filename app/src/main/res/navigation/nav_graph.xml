<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.myfragmentapp.FirstFragment"
        android:label="First Fragment">
        <action
            android:id="@+id/toSecondFragment"
            app:destination="@id/secondFragment" />
    </fragment>

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.myfragmentapp.SecondFragment"
        android:label="Second Fragment">
        <action
            android:id="@+id/toThirdFragment"
            app:destination="@id/thirdFragment" />
        <action
            android:id="@+id/backToFirstFragment"
            app:destination="@id/firstFragment" />
    </fragment>

    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.myfragmentapp.ThirdFragment"
        android:label="Third Fragment" />
</navigation>

